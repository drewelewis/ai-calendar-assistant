# Azure OpenAI Configuration
OPENAI_ENDPOINT=https://your-endpoint.openai.azure.com/
OPENAI_API_KEY=your-api-key
OPENAI_VERSION=2023-05-15
OPENAI_MODEL_DEPLOYMENT_NAME=your-deployment-name

# Azure OpenAI Model Parameters (Optional)
# Maximum tokens in response (default: 4000) - helps prevent malformed long responses
OPENAI_MAX_TOKENS=4000
# Temperature for randomness (0.0-2.0, default: 0.7) - lower values reduce hallucinations
OPENAI_TEMPERATURE=0.7
# Top-p for nucleus sampling (0.0-1.0, default: 0.9) - controls response diversity
OPENAI_TOP_P=0.9

# Azure OpenAI Retry Configuration (Optional)
# Maximum number of retry attempts for failed API calls (default: 3)
OPENAI_MAX_RETRIES=3
# Base delay in seconds for exponential backoff (default: 1.0)
OPENAI_BASE_DELAY=1.0
# Maximum delay in seconds between retries (default: 60.0)
OPENAI_MAX_DELAY=60.0
# Maximum allowed response length to prevent malformed responses (default: 50000)
MAX_RESPONSE_LENGTH=50000

# Microsoft Graph API (Entra Application)
ENTRA_GRAPH_APPLICATION_TENANT_ID=your-tenant-id
ENTRA_GRAPH_APPLICATION_CLIENT_ID=your-client-id
ENTRA_GRAPH_APPLICATION_CLIENT_SECRET=your-client-secret

# Azure Cosmos DB (Optional) - Using Azure Identity (AAD) Authentication
COSMOS_ENDPOINT=https://your-cosmos-account.documents.azure.com:443/
# COSMOS_KEY is no longer needed - using Azure Identity instead
COSMOS_DATABASE=AIAssistant
COSMOS_CONTAINER=ChatHistory

# Optional - Set to true to enable verbose logging for Graph operations
GRAPH_DEBUG=false

# Optional - Session ID for continuing a previous chat
# CHAT_SESSION_ID=previously-saved-session-id


