{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "environmentName": {
      "value": "${AZURE_ENV_NAME}"
    },
    "location": {
      "value": "${AZURE_LOCATION}"
    },
    "resourceGroupName": {
      "value": "rg-${AZURE_ENV_NAME}"
    },
    "openAIModelDeploymentName": {
      "value": "${OPENAI_MODEL_DEPLOYMENT_NAME=gpt-4o}"
    },
    "openAIModelName": {
      "value": "${OPENAI_MODEL_NAME=gpt-4o}"
    },
    "openAIModelVersion": {
      "value": "${OPENAI_MODEL_VERSION=2024-08-06}"
    },
    "cosmosDbDatabaseName": {
      "value": "${COSMOS_DATABASE=CalendarAssistant}"
    },
    "cosmosDbContainerName": {
      "value": "${COSMOS_CONTAINER=ChatHistory}"
    },
    "containerImageTag": {
      "value": "${CONTAINER_IMAGE_TAG=latest}"
    },
    "entraGraphClientId": {
      "value": "${ENTRA_GRAPH_APPLICATION_CLIENT_ID}"
    },
    "entraGraphClientSecret": {
      "value": "${ENTRA_GRAPH_APPLICATION_CLIENT_SECRET}"
    },
    "entraGraphTenantId": {
      "value": "${ENTRA_GRAPH_APPLICATION_TENANT_ID}"
    }
  }
}
